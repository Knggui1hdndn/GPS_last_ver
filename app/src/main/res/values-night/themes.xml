<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GPS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:textViewStyle">@style/MyTheme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
    </style>
    <style name="BottomNavication">
        <item name="android:background">@color/black</item>
    </style>
    <style name="MyCollapsedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="BackgroundTint">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="BackgroundTintImg">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BackgroundTint1">
        <item name="android:backgroundTint">#0d0d0d</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">#0d0d0d</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint" tools:targetApi="o">@color/black</item>
    </style>

    <style name="MyTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="Theme.GPS" parent="Base.Theme.GPS" />


</resources>