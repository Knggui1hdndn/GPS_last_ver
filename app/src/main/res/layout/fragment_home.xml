<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">
    <!--        app:sv_withTremble="false"-->
    <fragment
        android:id="@+id/signal"
        android:name="com.example.gps.ui.FragmentSignal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="4">

        <com.github.anastr.speedviewlib.AwesomeSpeedometer
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
             app:sv_indicatorColor="@color/color_3"
            app:sv_maxSpeed="280"
            app:sv_minSpeed="0"
            app:sv_speedTextPosition="CENTER"
            app:sv_speedometerMode="NORMAL"
            app:sv_trianglesColor="@color/black" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartTrip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
         android:layout_weight="0.8"
        android:layout_margin="5dp"
        android:background="@drawable/background_button_verti"
        android:text="00:00:00"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:textSize="30dp"
    android:layout_weight="1.2"
    android:background="@color/color_6"
    android:text="ADS"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="vertical">


        <fragment
            android:id="@+id/frag"
            android:name="com.example.gps.ui.ParameterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>