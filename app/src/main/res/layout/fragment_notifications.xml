<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.3">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/background_button_verti"
            android:text="00:00:00"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:backgroundTint="@null"
            app:cornerRadius="20dp"

            />

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="8dp"
            android:background="@drawable/background_button_verti"
            android:text="000 km/h"
            android:textAllCaps="false"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:backgroundTint="@null"
            app:cornerRadius="20dp" />

        <ImageView
            android:id="@+id/imgCurrent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/current_speed" />

        <ImageView
            android:id="@+id/imgTypeMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/change_typy_map" />

        <ImageView
            android:id="@+id/imgRotate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/rotate_screen_from_map" />
    </FrameLayout>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.7"
        android:gravity="bottom"
        android:orientation="vertical">


        <fragment
            android:id="@+id/frag"
            android:name="com.example.gps.ui.ParameterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>