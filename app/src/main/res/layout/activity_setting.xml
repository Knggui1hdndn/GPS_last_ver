<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     tools:context=".ui.setting.Setting">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mToolBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Cài đặt"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/mToolBar"
        android:layout_above="@+id/btnLetGo"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0d0d0d"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#0d0d0d"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:text="Đơn vị tốc độ"
                                android:textColor="#ABB5AFAF" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:weightSum="9">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnMph"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:backgroundTint="#0d0d0d"
                                    android:baselineAligned="false"
                                    android:padding="11dp"
                                    android:text="Mph"
                                    app:cornerRadius="25dp"
                                    app:strokeColor="#AAA3A3"
                                    app:strokeWidth="0.5dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnKm"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="3"
                                    android:backgroundTint="#0d0d0d"

                                    android:padding="11dp"

                                    android:text="Km"
                                    app:cornerRadius="25dp"
                                    app:strokeColor="#AAA3A3"
                                    app:strokeWidth="0.5dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnKnot"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"

                                    android:backgroundTint="#0d0d0d"
                                    android:padding="11dp"

                                    android:text="Knot"
                                    app:cornerRadius="25dp"
                                    app:strokeColor="#AAA3A3"
                                    app:strokeWidth="0.5dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0d0d0d"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Chọn chế độ của bạn"
                            android:textColor="#ABB5AFAF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:weightSum="9">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOto"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:backgroundTint="#0d0d0d"
                                android:padding="11dp"
                                android:text="Ô tô"
                                app:cornerRadius="25dp"
                                app:strokeColor="#AAA3A3"
                                app:strokeWidth="0.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBicycle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="3"
                                android:backgroundTint="#0d0d0d"
                                android:padding="11dp"
                                android:text="Xe đạp"
                                app:cornerRadius="25dp"
                                app:strokeColor="#AAA3A3"
                                app:strokeWidth="0.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTrain"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:backgroundTint="#0d0d0d"
                                android:padding="11dp"
                                android:text="Tàu hỏa"
                                app:cornerRadius="25dp"
                                app:strokeColor="#AAA3A3"
                                app:strokeWidth="0.5dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0d0d0d"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Cảnh báo tốc độ giới hạn tối đa" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:backgroundTint="#0d0d0d"
                                android:padding="11dp"
                                android:text="Mph"
                                android:id="@+id/btnWarningLimit"

                                app:strokeColor="#AAA3A3"
                                app:strokeWidth="0.5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Tốc độ tối đa của đồng hồ analog" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMaxSpeepAnalog"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:backgroundTint="#0d0d0d"
                                android:padding="11dp"
                                app:iconGravity="end"
                                app:icon="@drawable/baseline_arrow_drop_down_24"
                                android:text="Mph"
                                app:strokeColor="#AAA3A3"
                                app:strokeWidth="0.5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Hiển thij tốc độ trong Notification" />

                            <Switch
                                android:id="@+id/swtShowSpeedInNoti"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:checked="true"
                                android:padding="11dp"
                                android:trackTint="@color/teal_200"
                                android:trackTintMode="add"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Bật theo dõi trên bản đồ" />

                            <Switch
                                android:id="@+id/swtTrackOnMap"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:checked="true"
                                android:padding="11dp"

                                android:trackTintMode="add"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="#0d0d0d"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Báo động tốc độ" />

                            <Switch
                                android:id="@+id/swtAlarm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:checked="true"

                                android:padding="11dp"
                                android:trackTintMode="add"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="CÀI ĐẶT CHUNG"
                android:textColor="#ABB5AFAF"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0d0d0d"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0d0d0d"
                    android:orientation="vertical"
                    android:padding="10dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight="3"
                            android:text="Màu hiển thị" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor1"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="@color/white"
                                app:cornerRadius="15dp"
                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor2"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"

                                android:backgroundTint="@color/teal_200"
                                app:cornerRadius="10dp"
                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor3"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#FF0000"
                                app:cornerRadius="10dp"

                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor4"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#FFE500"
                                app:cornerRadius="10dp"
                                app:strokeColor="#837C7C"

                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor5"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="@color/purple_200"
                                app:cornerRadius="10dp"
                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor6"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#00FF0A"
                                app:cornerRadius="10dp"
                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnColor7"
                                android:layout_width="18dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#03A9F4"
                                app:cornerRadius="10dp"
                                app:strokeColor="#837C7C"
                                app:strokeWidth="1.5dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Hiển thị đồng hồ" />

                        <Switch
                            android:id="@+id/swtClockDisplay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="true"
                            android:padding="11dp"
                            android:trackTint="@color/teal_200"
                            android:trackTintMode="add"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Hiển thị nút đặt lại" />

                        <Switch
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="true"
                            android:padding="11dp"
                            android:id="@+id/swtShowReset"
                            android:trackTint="@color/teal_200"
                            android:trackTintMode="add"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đặt lại công tơ mét" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000000 km/h"
android:id="@+id/txtDistance"
                                android:textColor="#AAA3A3" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResetDistance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:backgroundTint="#0d0d0d"
                            android:text="Mph"
                            app:cornerRadius="25dp"
                            app:icon="@drawable/baseline_refresh_24"
                            app:iconGravity="textStart"
                            app:strokeColor="#AAA3A3"
                            app:strokeWidth="0.5dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="Đi nào"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnLetGo"/>
</RelativeLayout>
